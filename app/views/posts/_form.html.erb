<%= form_with model: post, html: {class: "form-horizontal"} do |form| %>
    <div class="form-group"><%= form.file_field :image %></div>
    <div class="form-group text-center">
        <p><%= form.label :caption %></p>
        <%= form.text_field :caption, size: "100%" %>
    </div>
    <div class="form-group text-center">
        <%= form.submit "Create Post", class: "btn-success" %>
    </div>
<% end %>